---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';

const title = 'U.S. Congress Tracker | Bills & Resolutions';
const description =
  'Follow every bill and resolution introduced in the current U.S. House and Senate. Fast, static, and always up-to-date.';
---
<Layout {title} {description}>
	<header>
	<h1>U.S. Congress Tracker</h1>
	<p>{{ description }}</p>
	</header>

	<nav aria-label="Main sections">
	<ul>
		<li><a href="/bills/">Browse House Bills</a></li>
		<li><a href="/resolutions/">Browse Resolutions</a></li>
	</ul>
	</nav>
</Layout>
